# Zulip Docker Deployment Environment Variables
# Copy this file to .env and fill in the values

# REQUIRED: Security Settings
# Generate a strong secret key using: openssl rand -hex 32
SECRET_KEY=

# REQUIRED: Database Credentials
# Use strong passwords in production
POSTGRES_USER=zulip
POSTGRES_PASSWORD=
POSTGRES_DB=zulip

# REQUIRED: RabbitMQ Credentials
# Use strong passwords in production
RABBITMQ_USER=zulip
RABBITMQ_PASSWORD=

# Optional: Deployment Settings
DEBUG=False
ALLOWED_HOSTS=zulip.novadominion.com,localhost,127.0.0.1
EXTERNAL_HOST=zulip.novadominion.com
ZULIP_ADMINISTRATOR=admin@zulip.novadominion.com

# Optional: Email Settings
EMAIL_HOST=localhost
EMAIL_PORT=25

# Optional: Redis Settings (if using password-protected Redis)
# REDIS_PASSWORD=